{% extends 'base.html.twig' %}

{% block body %}
<!-- Hero Section -->
<section id="home" class="section-padding min-h-screen flex items-center bg-gradient-to-br from-primary-50 to-purple-50 dark:from-dark-900 dark:to-dark-800">
    <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-6 animate-fade-in">
                <h1 class="text-4xl md:text-6xl font-bold leading-tight">
                    <span class="text-gradient">Vincent Ferry</span><br>
                    <span class="text-2xl md:text-4xl text-gray-700 dark:text-gray-300">Développeur PHP</span>
                </h1>
                <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
                    {{ 'hero.subtitle'|trans|raw }}
                </p>
                <div class="flex justify-center flex-col sm:flex-row gap-4">
                    <a href="#projects" class="btn-primary inline-flex items-center justify-center">
                        {{ 'hero.cta'|trans }}
                        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                    </a>
                    <a href="#contact" class="btn-secondary inline-flex items-center justify-center">
                        {{ 'contact.title'|trans }}
                    </a>
                </div>

                <!-- Réseaux Sociaux -->
                <div class="pt-3 border-t border-gray-200 dark:border-gray-700 flex justify-center">
                    <div class="flex justify-center sm:justify-start space-x-4" style="margin-top:24px;">
                        <!-- GitHub -->
                        <a href="https://github.com/vincentferry" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="group flex items-center justify-center w-12 h-12 bg-white dark:bg-dark-700 rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 border border-gray-200 dark:border-gray-600"
                           title="GitHub">
                           <svg class="w-6 h-6 text-gray-700 dark:text-gray-300 group-hover:text-black dark:group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                        </a>

                        <!-- LinkedIn -->
                        <a href="https://www.linkedin.com/in/vincent-ferry-11242b145/" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="group flex items-center justify-center w-12 h-12 bg-white dark:bg-dark-700 rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 border border-gray-200 dark:border-gray-600"
                           title="LinkedIn">
                            <img src="{{ asset('images/linkedin.webp') }}" alt="LinkedIn Logo" class="w-6 h-6 group-hover:scale-110 transition-transform">
                        </a>

                        <!-- Email -->
                        <a href="mailto:vincent.ferry78490@gmail.com" 
                           class="group flex items-center justify-center w-12 h-12 bg-white dark:bg-dark-700 rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 border border-gray-200 dark:border-gray-600"
                           title="Email">
                            <svg class="w-6 h-6 text-gray-700 dark:text-gray-300 group-hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </a>

                        <!-- Malt -->
                        <a href="https://www.malt.fr/profile/vincentferry" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="group flex items-center justify-center w-12 h-12 bg-white dark:bg-dark-700 rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 border border-gray-200 dark:border-gray-600"
                           title="Malt">
                            <img src="{{ asset('images/malt.png') }}" alt="Malt Logo" class="w-6 h-6 group-hover:scale-110 transition-transform">
                        </a>
                    </div>
                </div>
            </div>
            <div class="relative animate-float">
                <div class="relative z-10">
                    <img src="{{ asset('images/VincentFerry.png') }}" alt="{{ 'header.name'|trans }}" class="w-64 h-64 mx-auto rounded-full shadow-2xl object-cover" style="width: 50%; height: 50%;">
                </div>
                <div class="absolute inset-0 w-64 h-64 mx-auto bg-gradient-to-r from-primary-400 to-purple-400 rounded-full blur-3xl opacity-20 animate-pulse-gentle" style="width: 60%;"></div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="section-padding bg-white dark:bg-dark-800">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center space-y-6">
            <h2 class="text-3xl md:text-4xl font-bold text-gradient">{{ 'about.title'|trans }}</h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
                {{ 'about.description'|trans|raw }}
            </p>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section id="skills" class="section-padding bg-gray-50 dark:bg-dark-900">
    <div class="container-custom">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gradient mb-4">{{ 'skills.title'|trans }}</h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <!-- Frontend Skills -->
            <div class="card p-8 text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-4">{{ 'skills.frontend'|trans }}</h3>
                <div class="flex flex-wrap gap-2 justify-center">
                    {% for skill in skills.frontend %}
                        <span class="skill-tag">
                            {{ skill.name }}
                        </span>
                    {% endfor %}
                </div>
            </div>

            <!-- Backend Skills -->
            <div class="card p-8 text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-4">{{ 'skills.backend'|trans }}</h3>
                <div class="flex flex-wrap gap-2 justify-center">
                    {% for skill in skills.backend %}
                        <span class="skill-tag">
                            {{ skill.name }}
                        </span>
                    {% endfor %}
                </div>
            </div>

            <!-- Tools Skills -->
            <div class="card p-8 text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-4">{{ 'skills.tools'|trans }}</h3>
                <div class="flex flex-wrap gap-2 justify-center">
                    {% for skill in skills.tools %}
                        <span class="skill-tag">
                            {{ skill.name }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Section -->
<section id="projects" class="section-padding bg-white dark:bg-dark-800">
    <div class="container-custom">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gradient mb-4">{{ 'projects.title'|trans }}</h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
            {% for project in projects %}
                {{ include('components/project_card.html.twig', {project: project, showMoreTech: false}) }}
            {% endfor %}
        </div>

        <div class="text-center">
            <a href="{{ path('app_projects') }}" class="btn-primary">
                {{ 'projects.view_more'|trans }}
            </a>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="section-padding bg-gray-50 dark:bg-dark-900">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gradient mb-4">{{ 'contact.title'|trans }}</h2>
                <p class="text-lg text-gray-600 dark:text-gray-300">{{ 'contact.subtitle'|trans }}</p>
            </div>

            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Contact Info -->
                <div class="space-y-8">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold">Email</h3>
                            <p class="text-gray-600 dark:text-gray-300">
                                <a href="mailto:vincent.ferry78490@gmail.com" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                                    vincent.ferry78490@gmail.com
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold">Localisation</h3>
                            <p class="text-gray-600 dark:text-gray-300">
                                <a href="https://www.google.com/maps/place/78760+Jouars-Pontchartrain" 
                                   target="_blank" 
                                   rel="noopener noreferrer"
                                   class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                                    Jouars-Pontchartrain (78760)
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="card p-8">
                    <form id="contact-form" method="post" action="{{ path('app_contact') }}">
                        <!-- Honeypot for spam protection -->
                        <input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
                        
                        <div class="space-y-6">
                            <div>
                                <label for="name" class="block text-sm font-medium mb-2">{{ 'contact.name'|trans }} *</label>
                                <input type="text" id="name" name="name" required class="form-input">
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-medium mb-2">{{ 'contact.email'|trans }} *</label>
                                <input type="email" id="email" name="email" required class="form-input">
                            </div>

                            <div>
                                <label for="message" class="block text-sm font-medium mb-2">{{ 'contact.message'|trans }} *</label>
                                <textarea id="message" name="message" rows="5" required class="form-textarea"></textarea>
                            </div>

                            <button type="submit" class="w-full btn-primary">
                                {{ 'contact.send'|trans }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
