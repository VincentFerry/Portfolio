<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="scroll-smooth dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'header.name'|trans }} - {{ 'header.role'|trans }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block meta_description %}{{ 'about.description'|trans }}{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}développeur, full stack, web, symfony, javascript, php{% endblock %}">
        <meta name="author" content="{{ 'header.name'|trans }}">
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:title" content="{% block og_title %}{{ 'header.name'|trans }} - {{ 'header.role'|trans }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}{{ 'about.description'|trans }}{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{{ absolute_url(asset('images/VincentFerry.png')) }}{% endblock %}">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="{{ app.request.uri }}">
        <meta property="twitter:title" content="{% block twitter_title %}{{ 'header.name'|trans }} - {{ 'header.role'|trans }}{% endblock %}">
        <meta property="twitter:description" content="{% block twitter_description %}{{ 'about.description'|trans }}{% endblock %}">
        <meta property="twitter:image" content="{% block twitter_image %}{{ absolute_url(asset('images/VincentFerry.png')) }}{% endblock %}">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('css/project-cards.css') }}">
            <style>
                /* Smooth scrolling for the entire page */
                html {
                    scroll-behavior: smooth;
                }
                
                /* Offset for fixed header - adjust scroll position */
                section[id] {
                    scroll-margin-top: 100px;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            
            <script>
                // Vérifie si l'utilisateur a une préférence enregistrée
                if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                    document.documentElement.classList.add('dark');
                    localStorage.theme = 'dark';
                } else {
                    document.documentElement.classList.remove('dark');
                    localStorage.theme = 'light';
                }
                
                // Forcer le mode sombre par défaut
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            </script>
        {% endblock %}
    </head>

    <body class="bg-gray-50 dark:bg-dark-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
        <!-- Header -->
        <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-dark-900/80 backdrop-blur-custom border-b border-gray-200 dark:border-dark-700">
            <nav class="container-custom section-padding py-4">
                <div class="flex items-center justify-between">
                    <!-- Logo/Name -->
                    <a href="{{ path('app_home') }}" class="flex items-center space-x-4 hover:opacity-80 transition-opacity">
                        <img src="{{ asset('images/VincentFerry.png') }}" alt="{{ 'header.name'|trans }}" class="w-10 h-10 rounded-full object-cover">
                        <div>
                            <h1 class="text-xl font-bold text-gradient">{{ 'header.name'|trans }}</h1>
                            <p class="text-sm text-gray-600 dark:text-gray-400">{{ 'header.role'|trans }}</p>
                        </div>
                    </a>

                    <!-- Navigation (only on homepage) -->
                    {% if app.request.get('_route') == 'app_home' %}
                        <div class="hidden md:flex items-center space-x-8">
                            <a href="#home" class="nav-link">{{ 'nav.home'|trans }}</a>
                            <a href="#skills" class="nav-link">{{ 'nav.skills'|trans }}</a>
                            <a href="#projects" class="nav-link">{{ 'nav.projects'|trans }}</a>
                            <a href="#contact" class="nav-link">{{ 'nav.contact'|trans }}</a>
                        </div>
                    {% endif %}

                    <!-- Controls -->
                    <div class="flex items-center space-x-4">
                        <!-- CV Link -->
                        <a href="{{ asset('images/CV_Vincent_Ferry.pdf') }}" target="_blank" class="hidden md:inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors text-sm font-medium">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            {{ 'cv.title'|trans }}
                        </a>
                        
                        <!-- Admin Links -->
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin') }}" class="hidden md:inline-flex items-center px-3 py-1.5 text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors" title="Administration">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                Admin
                            </a>
                            <a href="{{ path('app_logout') }}" class="hidden md:inline-flex items-center px-3 py-1.5 text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 transition-colors" title="Déconnexion">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                Déconnexion
                            </a>
                        {% endif %}

                        <!-- Language Switcher -->
                        <select id="lang-switcher" class="bg-transparent border-none text-lg focus:ring-0 cursor-pointer text-gray-700 dark:text-gray-300">
                            <option value="fr" {{ app.request.locale == 'fr' ? 'selected' : '' }}>FR</option>
                            <option value="en" {{ app.request.locale == 'en' ? 'selected' : '' }}>EN</option>
                        </select>

                        <!-- Theme Toggle -->
                        <button id="theme-toggle" class="p-2 rounded-lg bg-gray-200 dark:bg-dark-700 hover:bg-gray-300 dark:hover:bg-dark-600 transition-colors duration-200" title="{{ 'header.theme_toggle'|trans }}">
                            <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                            </svg>
                            <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                            </svg>
                        </button>

                        <!-- Mobile Menu Button -->
                        <button id="mobile-menu-toggle" class="md:hidden p-2 rounded-lg bg-gray-200 dark:bg-dark-700 hover:bg-gray-300 dark:hover:bg-dark-600 transition-colors duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Mobile Navigation -->
                <div id="mobile-menu" class="hidden md:hidden mt-4 pt-4 border-t border-gray-200 dark:border-dark-700">
                    <div class="flex flex-col space-y-2">
                        <a href="#home" class="nav-link py-2">{{ 'nav.home'|trans }}</a>
                        <a href="#skills" class="nav-link py-2">{{ 'nav.skills'|trans }}</a>
                        <a href="#projects" class="nav-link py-2">{{ 'nav.projects'|trans }}</a>
                        <a href="#contact" class="nav-link py-2">{{ 'nav.contact'|trans }}</a>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="border-t border-gray-200 dark:border-dark-700 pt-2 mt-2">
                                <a href="{{ path('admin') }}" class="flex items-center py-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    Administration
                                </a>
                                <a href="{{ path('app_logout') }}" class="flex items-center py-2 text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                    </svg>
                                    Déconnexion
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="pt-20">
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="bg-white dark:bg-dark-800 border-t border-gray-200 dark:border-dark-700">
            <div class="container-custom section-padding py-8">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <div class="flex items-center space-x-4 mb-4 md:mb-0">
                        <!-- Social Links -->
                        <a href="https://github.com/vincentferry" target="_blank" class="social-link">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                        </a>
                        <a href="https://www.linkedin.com/in/vincent-ferry-11242b145/" target="_blank" class="social-link">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                        <a href="mailto:vincent.ferry78490@gmail.com" class="social-link">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </a>
                    </div>

                    <div class="text-center md:text-right">
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {{ 'footer.copyright'|trans }}
                        </p>
                        <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                            {{ 'footer.made_with'|trans }} ❤️ {{ 'footer.and'|trans }} Symfony
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <script>
            // Mobile menu toggle
            document.addEventListener('DOMContentLoaded', function() {
                const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
                const mobileMenu = document.getElementById('mobile-menu');
                
                if (mobileMenuToggle && mobileMenu) {
                    mobileMenuToggle.addEventListener('click', function() {
                        mobileMenu.classList.toggle('hidden');
                    });
                }
            });
        </script>
    </body>
</html>
